# AWS Configuration
AWS_REGION=ap-southeast-1
AWS_ACCOUNT_ID=your-account-id

# AWS Credentials (hoặc dùng AWS CLI configure)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# AWS S3 Bucket (phải tạo trước)
AWS_S3_BUCKET=your-face-recognition-bucket

# AWS Rekognition Collection (phải tạo trước)
AWS_REKOGNITION_COLLECTION=your-face-collection

# AWS DynamoDB Tables (phải tạo trước hoặc dùng CDK/Terraform)
AWS_DYNAMODB_PEOPLE_TABLE=face-recognition-people-dev
AWS_DYNAMODB_EMBEDDINGS_TABLE=face-recognition-embeddings-dev
AWS_DYNAMODB_MATCHES_TABLE=face-recognition-matches-dev

# Optional: AWS Cognito (nếu muốn dùng authentication)
COGNITO_ENABLED=false
COGNITO_USER_POOL_ID=
COGNITO_REGION=ap-southeast-1
COGNITO_APP_CLIENT_ID=

# API Settings
APP_NAME=Face Recognition System - Cloud
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
ENABLE_CORS=true
