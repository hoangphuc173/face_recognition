# Application
APP_NAME="Face Recognition System"
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_SECRET_KEY=your-secret-key-here-change-in-production

# Database
DB_TYPE=folder
DB_PATH=./data/face_database
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=3600

# Face Recognition
FACE_DETECTION_MODEL=hog
FACE_RECOGNITION_TOLERANCE=0.6
FACE_ENCODING_MODEL=large
MIN_FACE_SIZE=50
MAX_FACES_PER_IMAGE=10

# Storage
STORAGE_TYPE=local
STORAGE_PATH=./data/faces
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,mp4,avi

# Security
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=
